{
  "services": {
    "name": "cart",
    "version": "v1",
    "style": "RPC"
  },
  "schemas": {
    "addEntry": "./schemas/addEntrySchema"
  },
  "models": {
    "cartModel": "./models/cartModel"
  },
  "addToCartChain": {
    "getCart": "./operations/chains/addEntry/getCart",
    "bulkAddToCart": "./operations/chains/addEntry/bulkAddToCart",
    "calculateCart": "./operations/chains/addEntry/calculateCart",
    "postCalculateCart": "./operations/chains/addEntry/postCalculateCart",
    "saveCart": "./operations/chains/addEntry/saveCart",
    "postSaveCart": "./operations/chains/addEntry/postSaveCart"
  },
  "itemAddToCartChain": {
    "checkMaxQuantityPerProduct": "./operations/chains/addEntry/checkMaxQuantityPerProduct",
    "checkMaxNumberOfEntries": "./operations/chains/addEntry/checkMaxNumberOfEntries",
    "checkProductAvailability": "./operations/chains/addEntry/checkProductAvailability",
    "checkStockAvailability": "./operations/chains/addEntry/checkStockAvailability",
    "addToCart": "./operations/chains/addEntry/addToCart"
  },
  "removeFromCartChain": {
    "getEntry": "./operations/chains/removeEntry/getEntry",
    "removeFromCart": "./operations/chains/removeEntry/removeFromCart",
    "calculateCart": "./operations/chains/addEntry/calculateCart",
    "postCalculateCart": "./operations/chains/addEntry/postCalculateCart",
    "saveCart": "./operations/chains/addEntry/saveCart",
    "unreserve": "./operations/chains/removeEntry/unreserve"
  },
  "addToCartOnError": "./operations/chains/addEntry/onError",
  "bus": {
    "engines": {
      "local": {
        "handler": "./local"
      },
      "amqp": {
        "handler": "./amqp",
        "url": "amqp://bus"
      }
    },
    "channels": {
      "carts": {
        "name": "CARTS",
        "engine": "amqp"
      }
    }
  },
  "cartExpirationMinutes": 10080,
  "maxQuantityPerProduct": 100,
  "maxNumberOfEntries": 50,
  "reserveStockForMinutes": 1440,
  "aggregateItems": true
}
